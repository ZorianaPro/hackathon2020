{
  "name": "hackathon2020",
  "version": "2.1.0",
  "author": {
    "name": "ZorianaPro",
    "email": "zoryanalesyk@gmail.com"
  },
  "homepage": "https://zorianapro.github.io/hackathon2020/",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.9",
    "mongoose-autopopulate": "^0.12.2",
    "prettier": "^2.0.5",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-scripts": "3.4.0",
    "redux-mock-store": "^1.5.4",
    "save-dev": "0.0.1-security"
  },
  "scripts": {
    "build": "react-scripts build",
    "coverage:ci": "CI=true npm test -- --ci --coverage",
    "eject": "react-scripts eject",
    "lint": "./node_modules/.bin/eslint './src/**/*.{js,jsx}'",
    "lint:fix": "./node_modules/.bin/eslint  './src/**/*.{js,jsx}' --fix",
    "lint:ci": "./node_modules/.bin/eslint  --format junit -o test-results/eslint/results.xml --ext js,jsx src/",
    "start": "react-scripts start",
    "test": "react-scripts test",
    "test:ci": "CI=true npm test -- --ci --reporters='default' --reporters='jest-junit'",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "server": "node ./src/server/index.js"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test:ci",
      "pre-push": "lint-staged && npm run test:ci",
      "post-pull": "npm install"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "./node_modules/.bin/prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "axios": "^0.19.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.5.0",
    "gh-pages": "^3.0.0",
    "http-status": "^1.4.2",
    "jest-junit": "^11.0.1",
    "koa": "^2.11.0",
    "koa-body": "^4.1.1",
    "koa-bodyparser": "^4.2.1",
    "koa-cookie": "^1.0.0",
    "koa-cors": "0.0.16",
    "koa-logger": "^3.2.1",
    "koa-mount": "^4.0.0",
    "koa-router": "^8.0.8",
    "koa-static": "^5.0.0",
    "koa-useragent": "^4.0.0",
    "mongoose": "^5.9.19",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.1.2",
    "redux": "^4.0.5"
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{js,jsx}",
      "!<rootDir>/node_modules/"
    ],
    "coverageReporters": [
      "text"
    ]
  },
  "jest-junit": {
    "outputDirectory": "test-results/jest",
    "outputName": "results.xml",
    "suiteName": "hackathon2020"
  }
}
